{
    "name": "bookipi-flash-sale",
    "version": "1.0.0",
    "description": "Flash Sale System with Microservices Architecture",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "cd frontend && npm run dev",
        "dev:backend": "cd backend && npm run dev",
        "build": "npm run build:frontend && npm run build:backend",
        "build:frontend": "cd frontend && npm run build",
        "build:backend": "cd backend && npm run build",
        "test": "npm run test:frontend && npm run test:backend",
        "test:frontend": "cd frontend && npm run test",
        "test:backend": "cd backend && npm run test",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,css,scss,html,yml,yaml}\"",
        "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
        "stress:sales": "npx artillery run ./artillery/sales-status.yml",
        "stress:attempt": "npx artillery run ./artillery/attempt-purchase.yml --debug"
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "concurrently": "^8.2.2",
        "prettier": "^3.0.0"
    },
    "dependencies": {
        "axios": "^1.11.0",
        "random-string-generator": "^1.0.7"
    }
}
